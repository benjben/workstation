# Font for window titles
font pango:DejaVu Sans Mono 8

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
}

# use xev to determine a bindcode
bindcode 127 exec scrot -q 100 '/tmp/%Y%m%d-%H%M%S.png'
bindcode 232 exec xbacklight -dec 10
bindcode 233 exec xbacklight -inc 10
bindcode 121 exec (amixer get Master | grep off > /dev/null && amixer -q set Master unmute) || amixer -q set Master mute
bindcode 122 exec amixer -c 0 set Master 1dB-
bindcode 123 exec amixer -c 0 set Master 1dB+
bindcode 198 exec amixer set Capture toggle
bindsym Ctrl+Mod1+l exec i3lock -i ~/.config/screenlocked.png -t -u

exec --no-startup-id feh --bg-scale '~/.config/wallpaper.jpg' 
